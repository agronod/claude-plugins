{
  "description": "Inject steering context instructions into Explore/Plan subagents",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/check-steering-read.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
